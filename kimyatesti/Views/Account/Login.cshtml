@model kimyatesti.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>kimyatesti.com</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/RegisterStyle.css" rel="stylesheet" />
</head>

<body>

    <div class="container">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

            <div class="form">
                <div class="logoBox">
                    <img class="logoImg" src="~/Assets/Img/logo_w.png" />
                </div>
                <div class="form-control">
                    <span>
                        @Html.TextBoxFor(i => i.Username, new { @placeholder = "E-posta adresi" })
                        <i class="fa fa-envelope"></i>
                    </span>
                    <small>Error message</small>
                </div>
                <div class="form-control">
                    <span>
                        @Html.PasswordFor(i => i.Password, new { @placeholder = "Parola" })
                        <i class="fa fa-lock"></i>
                    </span>
                    <small>Error message</small>
                </div>


                @Html.ValidationSummary()

                <button id="btnSubmit" type="submit">Giriş</button>
                <div class="loginLinks">
                    <a href="/Account/Register">Kayıt ol</a>
                    <a href="/Account/ForgotPassword">Şifremi unuttum</a>

                </div>
            </div>
        }
    </div>
</body>

</html>